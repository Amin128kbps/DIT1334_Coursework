//Main class to test
public class Main {
	public static void main(String[] args) {
		Circle c = new Circle(5.0);
		System.out.println("Radius: "+ c.radius);
		System.out.println("Area: "+ c.area());
		System.out.println("Circumference: "+ c.circumference());
	}
